%% Test configuration for bobsled test suites
[
    {bobsled, [
        {test_db_path, "/tmp/bobsled_test_dbs"},
        {cleanup_on_exit, true},
        {test_timeout, 30000},
        {performance_test_duration, 10000},
        {crash_test_iterations, 100}
    ]},
    
    {sasl, [
        {sasl_error_logger, {file, "logs/sasl.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "logs"},
        {error_logger_mf_maxbytes, 10485760},
        {error_logger_mf_maxfiles, 10}
    ]},
    
    {kernel, [
        {logger_level, info},
        {logger, [
            {handler, file_log, logger_std_h, #{
                config => #{
                    file => "logs/test.log"
                },
                formatter => {logger_formatter, #{
                    single_line => true,
                    time_designator => $\s
                }}
            }}
        ]}
    ]}
].